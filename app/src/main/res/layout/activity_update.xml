<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:orientation="vertical">
        <az.plainpie.PieView
            android:id="@+id/pieView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            plainpie:inner_pie_padding="20"
            plainpie:inner_text_visibility="true"
            plainpie:percentage="0"
            plainpie:percentage_size="50"
            android:visibility="visible"
            />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="60dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/disconnect"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/disconnect"
                android:padding="40dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/success"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/success"
                android:padding="40dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                tools:text="45005\nНового Контента"
                android:text=""
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:alpha="0.7"
                android:visibility="visible"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >
            <ImageButton
                android:id="@+id/start"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_play"
                android:scaleType="centerCrop"
                />
            <ImageButton
                android:id="@+id/pause"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_pause"
                android:scaleType="centerCrop"

                />
            <ImageButton
                android:id="@+id/stop_service"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_stop"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:alpha="0.5"
            android:visibility="gone"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            plainpie:cardCornerRadius="10dp"
            android:layout_gravity="bottom"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_helper_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Если вам нужны не все фильмы а только один то нажмите кнопку ниже, это займет меньше времени по сравнению с обновлением всей базы"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:letterSpacing="0.03"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_update_one_element"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Я хочу обновить только 1 контент"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#3F7C3A"
                    android:visibility="visible"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        plainpie:cardCornerRadius="10dp"
        android:layout_gravity="bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_helper_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Обновление нужно для того что-бы вы получили актуальную базу фильмов и сериалов, мы оптимизировали алгоритм так что бы всё проходило быстро, вы спокойно можете покинуть страницу загрузки, обновление будет происходить фоном."
                android:textSize="16dp"
                android:gravity="center"
                android:padding="10dp"
                android:letterSpacing="0.03"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Зачем мне это нужно ?"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark"
                android:letterSpacing="0.05"
                android:padding="5dp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
</ScrollView>