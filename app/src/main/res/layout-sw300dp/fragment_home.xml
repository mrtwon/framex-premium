<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <androidx.appcompat.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:title="FrameX"
        android:background="@color/colorPrimary"
        app:menu="@menu/toolbar_home"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="300dp"
        android:textSize="15sp"
        android:gravity="center"
        android:visibility="gone"
        />
    <androidx.core.widget.NestedScrollView
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.cardview.widget.CardView
    android:id="@+id/recent_card_view"
    android:layout_width="@dimen/history_layout_size"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_gravity="center"
    android:visibility="visible"
    android:layout_marginBottom="30dp"
    >
    <LinearLayout
        android:id="@+id/linear_layout_recent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recent_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textView_label_category_recent"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="@dimen/genres_title_size"
            android:gravity="center"
            android:textColor="#FBFBFB"
            android:letterSpacing="0.1"
            android:background="#FF6767"
            />
        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

    </LinearLayout>
</androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:gravity="center"
        android:text="ðŸŽ¬ ÐšÐ°Ñ‚ÐµÐ³Ð¾Ñ€Ð¸Ð¸ Ð¢ÐžÐŸ-100 Ð›ÑƒÑ‡ÑˆÐ¸Ñ…"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textSize="@dimen/genres_title_size" />
</LinearLayout>
<include layout="@layout/fragment_genres"/>

</LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>