<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/top_frame_layout_width"
    android:layout_height="@dimen/top_frame_layout_height"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/top_cardview_size_width"
        android:layout_height="@dimen/top_cardview_size_height"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            >

            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_image_size_height"
                android:alpha="0.9"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                tools:text="Теория Большого взрыва папапаппап"
                android:textColor="#3A3A3A"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:alpha="0.8"
                android:textSize="@dimen/top_title_size"
                android:fontFamily="sans-serif"
                />
            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Рейтинг 8.7"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                >
                <ImageView
                    android:layout_width="@dimen/top_rating_image_size"
                    android:layout_height="match_parent"
                    android:src="@drawable/kp_rating"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/kp_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="8.7"
                    android:textSize="@dimen/top_rating_text_size"
                    android:textColor="#ddd"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="@dimen/top_rating_image_size"
                    android:layout_height="match_parent"
                    android:src="@drawable/imdb_rating"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/imdb_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:text="7.6"
                    android:textSize="@dimen/top_rating_text_size"
                    android:textColor="#ddd"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>