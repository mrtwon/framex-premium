<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/favorite_cardview_size_width"
    android:layout_height="@dimen/favorite_cardview_size_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp">
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        >
        <TextView
            android:id="@+id/contentType"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:text="Фильм"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/favorite_poster_size_height"
            tools:src="@drawable/test_poster"
            android:scaleType="centerCrop"
            android:alpha="0.9"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            tools:text="Теория Большого взрыва папапаппап"
            android:textColor="#3A3A3A"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:alpha="0.8"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/favorite_title_size"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:textSize="@dimen/favorite_button_text_size"
            app:icon="@drawable/ic_delete"
            app:iconSize="18dp"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>